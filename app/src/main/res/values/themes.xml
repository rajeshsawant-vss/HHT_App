<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ErrorProofing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>



        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colourError</item>
    </style>

    <style name="font_family_part_validation" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="font_family_part_light_lable" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/lableColour1</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="font_family_part_light_lable1" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colourText1</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="font_family_part_light_report" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/lableColour1</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="font_family_part_light_lable2" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="font_family_part_bold_lable" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="font_family_part_skip" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/toastError</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="font_family_part_error_toast" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="font_family_number" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colourorange</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="font_small_orange_lables" parent="Theme.AppCompat.Light">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colourorange</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ProgressBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--Here, android: indeterminateDrawable sets the picture displayed in
        the animation or the xml file of this animation and android: indeterminateOnly
           This property is set to true,the progress bar will be ignored Progress and present
           an infinite loop of animation
    -->
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>